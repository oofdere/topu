{
    "name": "topu",
    "displayName": "Topu",
    "description": "atproto lexicon dsl",
    "version": "0.0.1",
    "publisher": "oofdere",
    "categories": ["Programming Languages"],
    "repository": { "type": "git", "url": "https://github.com/oofdere/topu" },
    "keywords": ["atproto", "lexicon", "dsl", "bluesky", "schema"],
    "type": "module",
    "engines": { "vscode": "^1.89.0" },
    "main": "./out/extension.js",
    "contributes": {
        "languages": [{
            "id": "topu",
            "extensions": [".topu"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "topu",
            "scopeName": "source.topu",
            "path": "./topu.tmLanguage.json"
        }]
    },
    "scripts": {
        "build": "deno bundle --config ../deno.json ../lsp.ts -o out/server.js && deno bundle extension.js -o out/extension.js --external vscode",
        "watch": "echo 'use: deno bundle --watch ../lsp.ts -o out/server.js'",
        "package": "npm run build && npx -y @vscode/vsce package --no-dependencies -o ../out/topu.vsix"
    }
}
